<Window x:Class="WMI_Explorer.ExportQuery"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Export query" Height="232" Width="486" Icon="Procedure_8937.ico">
    <Grid>
        <Label Content="Query:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblQuery" Content="query" Margin="49,41,10,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.462"/>
        <RadioButton x:Name="optCSV" Content="CSV" HorizontalAlignment="Left" Margin="49,105,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="optList" Content="List" HorizontalAlignment="Left" Margin="49,126,0,0" VerticalAlignment="Top"/>
        <Label Content="Export format (optional, default is table):" HorizontalAlignment="Left" Margin="10,74,0,0" VerticalAlignment="Top"/>
        <Button Content="Copy to clipboard" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="121" Click="Button_Click"/>

    </Grid>
</Window>
